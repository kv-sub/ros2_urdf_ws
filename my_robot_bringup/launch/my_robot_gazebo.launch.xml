<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf.xacro" />
    <let name="rviz_config_path"
         value="$(find-pkg-share my_robot_bringup)/rviz/urdf_config.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <let name="gazebo_params" value="$(find-pkg-share my_robot_description)/config/gazebo_params.yaml" />

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
     <arg name="world" value="$(find-pkg-share my_robot_bringup)/worlds/test_world.world" />
     <arg name="gazebo_args" value="--params-file $(var gazebo_params)" />
    </include>

    <node pkg="gazebo_ros" exec="spawn_entity.py"
          args="-topic robot_description -entity my_robot" >
    </node>

    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />

    <node pkg="controller_manager" exec="spawner" args="diff_cont"/>

    <node pkg="controller_manager" exec="spawner" args="joint_broad"/>

    <node pkg="twist_mux" exec="twist_mux" output="screen" args="--ros-args --params-file $(find-pkg-share my_robot_description)/config/twist_mux.yaml">
      <param name="use_sim_time" value="true" />
      <remap from="/cmd_vel_out" to="/diff_cont/cmd_vel_unstamped" />
    </node>

    <let name="joy_params" value="$(find-pkg-share my_robot_description)/config/joystick.yaml" />

    <node pkg="joy" exec="joy_node" output="screen" args="--ros-args --params-file $(var joy_params)">
      <param name="use_sim_time" value="true" />
    </node>

    <node pkg="teleop_twist_joy" exec="teleop_node" name="teleop_node" output="screen" args="--ros-args --params-file $(var joy_params)">
      <param name="use_sim_time" value="true" />
      <remap from="/cmd_vel" to="/cmd_vel_joy"/>
    </node>

</launch>